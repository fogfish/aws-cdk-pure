{
  "name": "aws-cdk-pure",
  "version": "1.2.0",
  "description": "Purely Functional Cloud Components with AWS CDK",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p tsconfig.json",
    "test": "nyc -i ts-node/register mocha -r ts-node/register -C test/**.spec.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "clean": "rm -Rf lib && rm -Rf node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fogfish/aws-cdk-pure.git"
  },
  "dependencies": {
    "@types/node": "*",
    "@aws-cdk/core": "*"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3",
    "nyc": "*"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/!(*.test.*).ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": ".nyc_output/coverage"
  }
}
